<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metallica"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nestor.practica2_sqlite.MainActivity" >

    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlayView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gestureColor="#00FFFF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/tituloMenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Navegue con gestos"
            android:textColor="@color/darkred"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/opcionUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="88dp"
            android:gravity="center_horizontal"
            android:text="Almacenamiento Interno"
            android:textColor="@color/green"
            android:textSize="12pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="105dp"
            android:layout_height="283dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/numeros" />

    </android.gesture.GestureOverlayView>

    <TextView
        android:id="@+id/salida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/gestureOverlayView1"
        android:layout_marginTop="14dp"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/opcionDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Almacenamiento Externo"
        android:textColor="@color/green"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="72dp"
        android:textSize="12pt"
        android:textStyle="bold" />
    
    
    <TextView
        android:id="@+id/opcionTres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Multimedia Audio"
        android:textColor="@color/green"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="72dp"
        android:textSize="12pt"
        android:textStyle="bold" />
    
 	<TextView
        android:id="@+id/OpcionCuadro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Multimedia Video"
        android:textColor="@color/green"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="72dp"
        android:textSize="12pt"
        android:textStyle="bold" />

</RelativeLayout>